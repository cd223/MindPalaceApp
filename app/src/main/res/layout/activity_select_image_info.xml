<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/select_image_info1"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:text="@string/select_image_info1"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/select_image_info2"
        android:layout_width="fill_parent"
        android:layout_height="79dp"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:text="@string/select_image_info2"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/select_image_info3"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:text="@string/select_image_info3"
        android:textColor="@color/white"
        android:textSize="25dp" />

</LinearLayout>